---
// Importar los componentes necesarios
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contacto | ${SITE.title}`;
---

<!--Utilizando MainLayout para el diseño exterior de la página y definiendo meta para propósitos de SEO-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://famago.cl/contacto",
    "url": "https://famago.cl/contacto ",
    "name": "Contáctenos | Famago",
    "description":
      "¿Tienes preguntas o quieres discutir un proyecto? Contáctanos y crearemos la solución perfecta con nuestras herramientas y servicios.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://famago.cl|",
      "name": "Famago",
      "description":
        "Famago ofrece muebles de diseño industrial de alta calidad, ideales para el hogar y la oficina.",
    },
    "inLanguage": "es-CL"
  }}
>
  <ContactSection />
</MainLayout>
