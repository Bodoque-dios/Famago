---
// Importar los componentes necesarios
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contacto | ${SITE.title}`;
---

<!--Utilizando MainLayout para el diseño exterior de la página y definiendo meta para propósitos de SEO-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/contact",
    "url": "https://screwfast.uk/contact",
    "name": "Contáctenos | ScrewFast",
    "description":
      "¿Tienes preguntas o quieres discutir un proyecto? Contáctanos y crearemos la solución perfecta con nuestras herramientas y servicios.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://screwfast.uk",
      "name": "ScrewFast",
      "description":
        "ScrewFast ofrece herramientas de hardware de primera calidad y servicios de construcción expertos para satisfacer todas tus necesidades de proyecto.",
    },
    "inLanguage": "es-ES"
  }}
>
  <ContactSection />
</MainLayout>
