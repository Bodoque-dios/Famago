---
import { Image } from "astro:assets";

const { data, basePath } = Astro.props;

interface Props {
  data: {
    src: string;
    alt: string;
    title: string;
    slug: string;
  };
  basePath: string;
}
---

<div class="group relative overflow-hidden">
  <Image
    src={data.src}
    alt={data.alt}
    class="h-auto w-full object-cover transition-transform duration-500 group-hover:scale-105"
    inferSize={true}
  />

  <a
    class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-35 text-white transition-all duration-700 ease-in-out hover:scale-105 hover:bg-opacity-50"
    href={`${basePath}/${data.slug}`}
  >
    <h2 class="text-4xl font-bold shadow">{data.title}</h2>
  </a>
</div>
